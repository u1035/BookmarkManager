<Window x:Class="BookmarkManager.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookmarkManager.Views"
        mc:Ignorable="d" WindowStyle="ToolWindow" ResizeMode="NoResize"
        SizeToContent="WidthAndHeight" 
        Title="BookmarkManager settings" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">

            <CheckBox Margin="4">Start with Windows</CheckBox>

            <CheckBox Margin="4">Open last used file</CheckBox>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Margin="4" >TOR browser path:</TextBlock>
                <TextBox Grid.Column="1" Margin="4" MinWidth="400"></TextBox>
                <Button Grid.Column="1" Margin="4" HorizontalAlignment="Right" Width="30">...</Button>
            </Grid>

            <Button Margin="4" Width="200" HorizontalAlignment="Right">Clear last used files list</Button>

            <StackPanel Margin="4" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Margin="4" MinWidth="80">Save</Button>
                <Button Margin="4" MinWidth="80">Cancel</Button>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
